<odoo>
    <template id="health_plan_detail" name="Detalle del Plan de Salud">
        <t t-call="website.layout">
            <!-- Header del Título -->
            <div style="background-color: #26326f; padding: 20px; margin-bottom: 20px; display: flex; align-items: center; justify-content: space-between;">
                <h1 class="text-left mb-0 text-white" t-esc="plan.name"/>
                <a href="/planes" class="btn" style ="background-color: #efc631">Regresar a Planes</a>
            </div>
            
            <!-- Contenido Principal -->
            <div class="container mt-4">
                <div class="row">
                    <!-- Columna del Logo -->
                    <div class="col-md-4 text-center">
                        <t t-if="plan.logo">
                            <img t-att-src="'/web/image/health.plan/%s/logo' % plan.id" 
                                 class="img-fluid rounded shadow-sm mb-4" 
                                 alt="Logo del Plan de Salud" 
                                 style="max-width: 100%; height: auto;" />
                        </t>
                    </div>
                    <!-- Columna de Detalles -->
                    <div class="col-md-8">
                        <h2 class="mb-3" style="color: #26326f;">Detalles del Plan</h2>
                        <!-- Tabla para Productos y Promociones -->
                        <table class="table table-hover table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th style="text-align: center;">Producto</th>
                                    <th style="text-align: center;">Promoción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="plan.product_ids" t-as="product_line">
                                    <tr>
                                        <td t-esc="product_line.product_id.name"/>
                                        <td t-esc="product_line.promotion" class="text-success" style="text-align: center;" />
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
