<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_store_tree" model="ir.ui.view">
        <field name="name">store.tree</field>
        <field name="model">store</field>
        <field name="arch" type="xml">
            <tree string="Tiendas">
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_store_form" model="ir.ui.view">
        <field name="name">store.form</field>
        <field name="model">store</field>
        <field name="arch" type="xml">
            <form string="Tiendas">
                <sheet>
                    <group string ="Información General">
                        <field name="name"/>
                        <field name="description"/>
                        <field name="image"/>  
                    </group>
                    <group string ="Ubicación">
                        <field name="address"/>
                        <field name="department" />
                        <field name="municipality"/>
                        <field name="zona"  placeholder="Ingrese solo números enteros"/>
                        <field name="latitude" />
                        <field name="longitude" />
                    </group>
                    <group string = "Contacto" >
                        <field name="phone"/>
                        <field name="opening_hours"/>  
                    </group>
                </sheet> 
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>   
            </form>
        </field>
    </record>
   
    <!-- Acción asociada al submenú -->
    <record id="action_store" model="ir.actions.act_window">
        <field name="name">Tiendas</field>
        <field name="res_model">store</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <!-- Submenú en website.menu_site-->
    <record id="menu_store" model="ir.ui.menu">
        <field name="name">Administrar Tiendas</field>
        <field name="parent_id" ref="website.menu_site"/>
        <field name="action" ref="action_store"/>
        <field name="sequence">50</field> 
    </record>
</odoo>
