<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_website_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.show_prices</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='show_line_subtotals_tax_selection']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="custom_show_prices_setting">
                    <div class="o_setting_left_pane">
                        <field name="show_prices"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_prices"/>
                        <div class="text-muted">
                            Activar para mostrar precios en la pagina web.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
