<odoo>
    <template id="website_nuestras_tiendas" name="Nuestras Tiendas">
        <t t-call="website.layout">
            <div class="container mt-5">
                 <div style="background-color: #26326f; padding: 10px; margin-bottom: 0;">
                    <h1 class="text-left mb-0 text-white">Nuestras Tiendas</h1>
                </div>
                <div class="row">
                    <t t-foreach="stores" t-as="store">
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <t t-if="store.image">
                                 <img t-att-src="'/web/image/store/%s/image' % store.id" class="card-img-top" alt="Imagen de la Tienda" style="width: 408px; height: 350px; object-fit: cover;" />

                                </t>
                                <div class="card-body">
                                    <h5 class="card-title" t-esc="store.name"/>
                                    <p class="card-text">
                                        <strong>Dirección:</strong> <span t-esc="store.address"/><br/>
                                        <strong>Teléfono:</strong> <span t-esc="store.phone"/><br/>
                                        <strong>Horario:</strong> <span t-esc="store.opening_hours"/>
                                    </p>
                                    <p t-if="store.description" class="card-text" t-esc="store.description"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
