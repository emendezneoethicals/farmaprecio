<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="hide_oe_price_for_website_1" inherit_id="website_sale.product_price">
        <xpath expr="//span[contains(@class, 'oe_price')]" position="replace">
            <div style="display: none;"></div>
        </xpath>
    </template>

    <template id="hide_js_main_product_for_specific_website" inherit_id="website_sale.product">
        <xpath expr="//div[contains(@class, 'js_product')]" position="replace"> 
            <div style="display: none;"></div>
        </xpath>
    </template>

     <template id="hide_product_price" inherit_id="website_sale.products_item">
        <xpath expr="//div[contains(@class, 'product_price')]" position="replace">
            <div style="display: none;"></div>
        </xpath>
    </template>

    <template id="hide_pricelist_dropdown" inherit_id="website_sale.pricelist_list" name="Hide Pricelist Dropdown">
        <xpath expr="//div[@t-attf-class]" position="replace">
            <div style="display: none;"></div>
        </xpath>
    </template>
</odoo>
