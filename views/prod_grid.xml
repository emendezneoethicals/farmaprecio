<odoo>
    <template id="hide_products_grid_before_rail" inherit_id="website_sale.products">
        <xpath expr="//div[contains(@class, 'o_wsale_products_grid_before_rail')]" position="attributes">
            <attribute name="style" t-if="website.id == 1">display:none;</attribute>
        </xpath>
    </template>

     <template id="hide_select_attribute_specific_website" inherit_id="website_sale.products_attributes">
        <xpath expr="//select[contains(@class, 'css_attribute_select')]" position="attributes">
            <attribute name="style" t-if="website.id == 1">display:none;</attribute>
        </xpath>
    </template>

     <template id="custom_hide_filmstrip_wrapper" inherit_id="website_sale.filmstrip_categories">
        <xpath expr="//div[contains(@class, 'o_wsale_filmstip_wrapper')]" position="attributes">
            <attribute name="style" t-if="website.id == 1">display:none;</attribute>
        </xpath>
    </template>

    <template id="hide_oe_price_for_website_1" inherit_id="website_sale.product_price">
        <xpath expr="//span[contains(@class, 'oe_price')]" position="attributes">
            <attribute name="class" t-if="website.id == 1">d-none</attribute>
        </xpath>
    </template>

    <template id="custom_hide_divider_for_website_1" inherit_id="website_sale.header_cart_link">
        <xpath expr="//li[contains(@class, 'divider')]" position="attributes">
            <attribute name="class" t-if="website.id == 1">#{_item_class} divider d-none</attribute>
            <!-- AÃ±ade 'd-none' solo si website.id es 1, de lo contrario, no cambia la clase existente -->
        </xpath>
    </template>

</odoo>
